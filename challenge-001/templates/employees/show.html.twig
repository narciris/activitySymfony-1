{% extends 'base.html.twig' %}

{% block title %}Detalles del Proyecto{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow" style="width: 24rem;">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0 text-center">Detalles del Empleado</h5>
            </div>
            <div class="card-body">
                <div class="mb-3 text-center">
                    <h3>{{ employee.name }}</h3>
                    <span class="badge bg-secondary">ID: {{ employee.id }}</span>
                </div>

                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item d-flex justify-content-between">
                        <strong>Correo electronico</strong>
                        <span>{{ employee.email }}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <strong>Posicion</strong>
                        <span>{{ employee.position }}</span>
                    </li>
                </ul>

                <div class="text-center">
                    <a href="{{ path('employee_index') }}" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-1"></i> Volver a la lista
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}