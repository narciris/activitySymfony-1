{% extends 'base.html.twig' %}

{% block title %}Proyectos{% endblock %}

{% block body %}
    <div class="container mt-4">
        {# Mostrar mensajes flash #}
{#        {% for label, messages in app.flashes %}#}
{#            {% for message in messages %}#}
{#                <div class="alert alert-{{ label }}">#}
{#                    {{ message }}#}
{#                </div>#}
{#            {% endfor %}#}
{#        {% endfor %}#}

        <h1>Lista de Proyectos</h1>

        <a href="{{ path('project_create') }}" class="btn btn-primary mb-3">Crear nuevo proyecto</a>

        {% if projects is defined and projects|length > 0 %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Título</th>
                    <th>Fecha de inicio</th>
                    <th>Fecha de fin</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.title }}</td>
                        <td>{{ project.startDate|date('d/m/Y') }}</td>
                        <td>{{ project.endDate|date('d/m/Y') }}</td>
                        <td>
                            <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-sm btn-info">Ver</a>
                            <a href="#" class="btn btn-sm btn-warning">Editar</a>
                            <a href="#" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-info">
                No hay proyectos disponibles. ¡Crea uno nuevo!
            </div>
        {% endif %}
    </div>
{% endblock %}